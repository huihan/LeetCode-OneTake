public class Solution {
    public boolean isPalindrome(String s) {
      s = s.toLowerCase();
      int len = s.length();
      int left = 0 , right = s.length()-1;
      while(left< right){
        while(left < len-1 && (s.charAt(left) > 'z'||s.charAt(left) < 'a')) left++;
        while(right >0 && (s.charAt(right) > 'z'||s.charAt(right) < 'a')) right--; 
        if(left<right) return true;
        if(s.charAt(left)!=s.charAt(right) ) return false;
        left++;
        right--;
      }
      return true;
    }
}
